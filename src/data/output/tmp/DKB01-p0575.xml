       <persName corresp="#pers_古河虎之助">
<surname>
         古河
        </surname>
<forename>
         虎之助
        </forename>
</persName>
       婚儀ノ事ヲ談ス、
       <persName corresp="#pers_福島甲子三">
<surname>
         福島
        </surname>
<forename>
         甲子三
        </forename>
</persName>
       、
       <persName corresp="#pers_岡崎遠光">
<surname>
         岡崎
        </surname>
<forename>
         遠光
        </forename>
</persName>
