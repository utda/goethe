       <persName corresp="#pers_石川顕一郎">
<surname>
         石川
        </surname>
<forename>
         顕一郎
        </forename>
</persName>
       氏ノ事ヲ談ス、
       <persName corresp="#pers_高松">
<surname>
         高松
