       <persName corresp="#pers_安達憲忠">
<surname>
         安達
        </surname>
<forename>
         憲忠
        </forename>
</persName>
       来ル、
       <time when="13:00:00">
        午後一時
       </time>
<placeName corresp="#place_日本橋兜町">
        兜町
       </placeName>
       事務所ニ抵リ英国人
       <persName corresp="#pers_ユエント_ケン">
<forename>
         ユエント
        </forename>
        ・
        <surname>
         ケン
        </surname>
</persName>
