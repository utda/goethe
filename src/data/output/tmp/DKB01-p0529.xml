       <persName corresp="#pers_成瀬仁蔵">
<surname>
         成瀬
        </surname>
<forename>
         仁蔵
        </forename>
</persName>
       氏来リテ
       <orgName>
        女子大学
       </orgName>
       ノ事ヲ協議ス、
       <time when="11:00:00">
        午前十一時
       </time>
<placeName corresp="#place_日本橋兜町">
        兜町
       </placeName>
       事務所ニ抵ル、
       <persName corresp="#pers_郷誠之助">
<surname>
         郷
        </surname>
<forename>
         誠之助
        </forename>
</persName>
       氏来話ス、
       <time when="12:00:00">
        正午
       </time>
<orgName>
        第一銀行
       </orgName>
       ニ於テ午飧シ、後、
       <orgName>
        日本銀行
       </orgName>
       ニ抵リ、
       <persName corresp="#pers_井上準之助">
<surname>
         井上
        </surname>
<forename>
         準之助
        </forename>
</persName>
