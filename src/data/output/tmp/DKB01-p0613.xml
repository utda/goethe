<placeName corresp="#place_柳橋">
        柳橋
       </placeName>
<orgName>
        亀清楼
       </orgName>
       ニ抵リ、
       <orgName>
        清水組
       </orgName>
       ノ送別会ニ出席ス、
       <persName corresp="#pers_中野">
<surname>
         中野
        </surname>
</persName>
