<placeName corresp="#place_新橋">
        新橋
       </placeName>
       発ノ汽車ニテ
       <placeName corresp="#place_浦賀">
        浦賀
       </placeName>
       ニ抵リ船渠会社工場ヲ一覧ス、
       <persName corresp="#pers_渡辺治右衛門">
<surname>
         渡辺
        </surname>
<forename>
         治右衛門
        </forename>
</persName>
       、
       <persName corresp="#pers_臼井儀兵衛">
<surname>
         臼井
        </surname>
<forename>
         儀兵衛
        </forename>
</persName>
       、
       <persName corresp="#pers_佐々木慎思郎">
<surname>
         佐々木
        </surname>
<forename>
         慎思郎
        </forename>
</persName>
       、
       <persName corresp="#pers_早崎">
<surname>
         早崎
        </surname>
</persName>
       、
       <persName corresp="#pers_富岡">
<surname>
         富岡
        </surname>
</persName>
