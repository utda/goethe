       <time when="17:00:00">
        午後五時
       </time>
<placeName corresp="#place_田端">
        田端
       </placeName>
       ナル自笑軒ニ抵ル、
       <persName corresp="#pers_大川平三郎">
<surname>
         大川
        </surname>
<forename>
         平三郎
        </forename>
</persName>
       氏ノ招宴ナリ、
       <persName corresp="#pers_渋沢兼子">
<forename>
         兼子
        </forename>
</persName>
       同伴ス、
       <persName corresp="#pers_田中栄八郎">
<surname>
         田中
        </surname>
<forename>
         栄八郎
        </forename>
