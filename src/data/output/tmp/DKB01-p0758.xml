       <persName corresp="#pers_林">
<surname>
         林
        </surname>
</persName>
       、
       <persName corresp="#pers_桂">
<surname>
         桂
        </surname>
</persName>
       、
       <persName corresp="#pers_大橋半七郎">
<surname>
         大橋
        </surname>
<forename>
         半七郎
        </forename>
