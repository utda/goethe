<surname>
         八十島
        </surname>
<forename>
         親徳
        </forename>
</persName>
       氏来話ス、午後
       <persName corresp="#pers_山下弥七郎">
<surname>
         山下
        </surname>
<forename>
         弥七郎
        </forename>
</persName>
