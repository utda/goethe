       <persName corresp="#pers_高根義人">
<surname>
         高根
        </surname>
<forename>
         義人
        </forename>
</persName>
       ト会談セシムル事トス、
       <persName corresp="#pers_徳川達孝">
<surname>
         徳川
        </surname>
<forename>
         達孝
        </forename>
</persName>
       伯ノ使者来リ
       <placeName corresp="#place_飯能">
